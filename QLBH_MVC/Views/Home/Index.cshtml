@using QLBH_MVC.Models

@model HomeModel

@{
    //ViewBag.Title = "Index";
}

@section title {
    NHỮNG SẢN PHẨM MỚI NHẤT
}

@section css {
    <!-- bxSlider Javascript file -->
    <script src="~/assets/js/jquery.bxslider.min.js"></script>
    <!-- bxSlider CSS file -->
    <link href="~/assets/js/jquery.bxslider.css" rel="stylesheet" type="text/css" />
}

@section slider {
    <script type="text/javascript">
        $(document).ready(function () {
            $('.bxslider').bxSlider({
                mode: 'fade',
                captions: true,
                auto: true,
                autoControls: false
            });
        });
    </script>
    <ul class="bxslider">
        <li>
            <img src="~/images/sliders/slider1.jpg" />
        </li>
        <li>
            <img src="~/images/sliders/slider2.jpg" />
        </li>
        <li>
            <img src="~/images/sliders/slider3.jpg" />
        </li>
    </ul>
}


<div class="section group">
    <div class="section group">
        @foreach (var item in Model.LatestProducts)
        {
            <div class="grid_1_of_4 images_1_of_4 truncate">
                <a href="@Url.Action("ProductDetail", "Product", new { id = item.ProID})">
                    <img src="~/images/@item.ProID/1_thumbs.jpg" alt="" />
                </a>
                <h2>
                    @item.ProName
                </h2>
                <div class="price-details">
                    <div class="price-number truncate">
                        <p><span class="rupees">@String.Format("{0:N0}", item.Price)</span></p>
                    </div>
                    <div class="add-cart">
                        <h4>
                            @if (item.Quantity < 1)
                            {
                                <a href="@Url.Action("ProductDetail", "Product", new { id = item.ProID})">Hết hàng</a>
                            }
                            else
                            {
                                <a href="@Url.Action("ProductDetail", "Product", new { id = item.ProID})">Chi tiết</a>
                            }
                        </h4>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        }
    </div>
</div>

